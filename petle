#include <stdio.h>

int main()
{
	int i,a;
	
	int tab[1000];
	
	 a=1;
	 i=1;
	 while (a>0)
	 {
		 printf ("podaj liczbe ");
		 scanf("%i", &a);
		 tab[i]=a;
		 i=i+1;
		} 
	  
	for (i=(i-1);i>0;i--)
	 {
		 printf("%i ", tab[i]);
	    
	} 
	printf (" \n");
  printf ("koniec programu");
	return 0;
}


ZADANIE 2 :

#include <stdio.h>

int main()
{
	int a,i;
	int tab[1000];

	printf ("podaj liczbe naturalna");
	scanf ("%i", &a);
	
	i=0;
	   while (a>0) 
	   {  
		   tab[i]=a%8;
		   a=a/8; 
		   i=i+1;
		}
		
		for (i=i-1;i>=0;i=i-1)
	 {
		 printf("%i ", tab[i]);
	    
	 } 
	
	return 0;
}

